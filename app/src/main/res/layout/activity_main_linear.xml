<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/layout3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <LinearLayout
          android:id="@+id/layout1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <TextView
             android:id="@+id/TextBox"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/love_statement"
             android:textSize="30dp" />

         <Switch
             android:id="@+id/switch1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Switch on/off" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <ImageButton
             android:id="@+id/flag_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:onClick="toggleFlag"

             android:src="@drawable/flag"
             android:text="3" />

      </LinearLayout>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <Button
          android:id="@+id/PRESSME"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:backgroundTint="#6762FF"
          android:text="PRESS ME"
          android:onClick="displayToastMsg"
          android:textColor="#FFFFFF" />

      <View
          android:id="@+id/divider"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="?android:attr/listDivider"
          tools:visibility="invisible" />

      <CheckBox
          android:id="@+id/WatchedCheckBox"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Check this out!" />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:hintEnabled="false">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/EditTextBox"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="I love Android" />
      </com.google.android.material.textfield.TextInputLayout>
   </LinearLayout>

</LinearLayout>