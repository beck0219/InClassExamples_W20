<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NameActivity">

    <TextView
        android:id="@+id/text_view_name_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dontcallmethat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="@string/dontcallmethatbutton"
            android:textColor="#FAF4F4" />

        <Button
            android:id="@+id/button_thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="@string/thankyoubutton"
            android:textColor="#FBF6F6" />
    </LinearLayout>
</LinearLayout>